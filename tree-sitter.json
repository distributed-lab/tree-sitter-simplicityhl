{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "simplicityhl",
      "camelcase": "SimplicityHL",
      "title": "SimplicityHL",
      "scope": "source.simplicityhl",
      "file-types": [
        "simf"
      ],
      "injection-regex": "^simplicityhl$",
      "class-name": "TreeSitterSimplicityhl"
    }
  ],
  "metadata": {
    "version": "0.1.2",
    "license": "MIT",
    "description": "Tree-sitter parse for Rust-like high-level language that compiles down to Simplicity bytecode.",
    "authors": [
      {
        "name": "Kyrylo Baibula",
        "email": "kyrylo.baybula@distributed-lab.com"
      },
      {
        "name": "Volodymyr Herashchenko",
        "email": "cholkegn@gmail.com"
      }
    ],
    "links": {
      "repository": "https://github.com/distributed-lab/tree-sitter-simplicityhl.git"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true,
    "zig": false
  }
}
